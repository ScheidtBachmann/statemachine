{
    "name": "sm",
    "displayName": "StateMachine",
    "description": "StateMachine Language Support",
    "version": "0.0.1",
    "publisher": "Scheidt&Bachmann",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:sm"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "sm",
                "aliases": [
                    "sm"
                ],
                "extensions": [
                    ".sm"
                ],
                "configuration": "./sm.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "sm",
                "scopeName": "text.sm",
                "path": "./sm.tmLanguage"
            }
        ]
    },
    "devDependencies": {
        "vscode": "^1.1.21",
        "typescript": "^2.9.2",
        "@types/node": "^10.11.5"
    },
    "dependencies": {
        "vscode-languageclient": "^5.1.0"
    },
    "scripts": {
        "prepare": "node ./node_modules/vscode/bin/install && tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -w -p ./",
        "update-vscode": "node ./node_modules/vscode/bin/install"
    }
}
