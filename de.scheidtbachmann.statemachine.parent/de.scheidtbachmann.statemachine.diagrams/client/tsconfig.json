{
    "include": [
        "src",
        "typings"
    ],
    "compilerOptions": {
        "strict": true,
        "strictPropertyInitialization": false,  // 'true' causes weird validation errors since today...
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "typeRoots": [
            "typings"
        ],
        "sourceMap": true,
        "declaration": true,
        "rootDir": "src",
        "outDir": "lib",
        "types": [
            "node", "reflect-metadata"
        ],
        "jsx": "react",
        // "reactNamespace": "JSX", // not required here
        "skipLibCheck": true
    }
}